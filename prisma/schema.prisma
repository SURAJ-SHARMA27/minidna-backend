generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Item {
  id              String   @id @default(cuid())
  sourceUrl       String
  title           String?
  description     String?
  category        String?
  attributes      Json?
  fingerprint     String?
  canonicalId     String?
  confidenceScore Float?
  createdAt       DateTime @default(now())

  canonical       Item?    @relation("Canonical", fields: [canonicalId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  variants        Item[]   @relation("Canonical")

  @@index([fingerprint])
}
